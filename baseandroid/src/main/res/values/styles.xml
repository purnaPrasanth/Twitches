<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textAppearance">@style/BaseTheme.Text</item>
        <item name="android:textAppearanceSmall">@style/BaseTheme.Text.Small</item>
        <item name="android:textAppearanceMedium">@style/BaseTheme.Text.Medium</item>
        <item name="android:textAppearanceLarge">@style/BaseTheme.Text.Large</item>
        <item name="android:titleTextAppearance">@style/BaseTheme.Text.Title</item>
        <item name="android:subtitleTextAppearance">@style/BaseTheme.Text.SubTitle</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:spinnerItemStyle">@style/BaseTheme.Text.Medium</item>
        <item name="android:spinnerDropDownItemStyle">@style/BaseTheme.Text.Medium</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:divider">@color/textColorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="twitchesBottomNavAppearance">@style/BaseTheme.BottomNavigation</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:toolbarStyle">@style/BaseTheme.ToolBar</item>
    </style>

    <style name="BaseTheme.BottomNavigation">
    </style>

    <style name="BaseTheme.Text">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="BaseTheme.Text.Small" parent="BaseTheme.Text">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="BaseTheme.Text.Medium" parent="BaseTheme.Text">
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="BaseTheme.Text.Large" parent="BaseTheme.Text">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="BaseTheme.Text.Title" parent="BaseTheme.Text.Medium">
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="BaseTheme.Text.SubTitle" parent="BaseTheme.Text.Caption">
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="BaseTheme.ToolBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="BaseTheme.Text.Caption">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">@dimen/textSizeTiny</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
</resources>