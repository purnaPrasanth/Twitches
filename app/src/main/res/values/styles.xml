<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/AppTheme.Text</item>
        <item name="android:textAppearanceSmall">@style/AppTheme.Text.Small</item>
        <item name="android:textAppearanceMedium">@style/AppTheme.Text.Medium</item>
        <item name="android:textAppearanceLarge">@style/AppTheme.Text.Large</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textAppearanceListItem">@style/AppTheme.Text.ListItem</item>
        <item name="android:textAppearanceListItemSmall">@style/AppTheme.Text.ListItem.Small</item>
        <item name="android:spinnerItemStyle">@style/AppTheme.Text.Medium</item>
        <item name="android:spinnerDropDownItemStyle">@style/AppTheme.Text.Medium</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:divider">@color/textColorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="twitchesToolbarTitleAppearance">@style/AppTheme.Toolbar.Title</item>
        <item name="twitchesBottomNavAppearance">@style/AppTheme.BottomNavigation</item>
        <item name="textAppearanceCaption">@style/AppTheme.Text.Caption</item>
    </style>

    <style name="BaseAppTheme.Text.ToolBarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textSizeTitle</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="BaseTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/toolbarHeight</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">@dimen/elevation</item>
    </style>

    <style name="BaseTheme.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@null</item>
        <item name="itemIconTint">@color/bottom_navigation_item_tint</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="itemTextColor">@color/bottom_navigation_item_tint</item>
        <item name="itemIconSize">@dimen/icon_size</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="AppTheme.Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.Text.Small" parent="AppTheme.Text">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="AppTheme.Text.Medium" parent="AppTheme.Text">
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="AppTheme.Text.Large" parent="AppTheme.Text">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="AppTheme.Text.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/textSizeTitle</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.Text.SubTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.Toolbar" parent="BaseTheme.Toolbar" />

    <style name="AppTheme.Toolbar.Title" parent="BaseAppTheme.Text.ToolBarTitle" />

    <style name="AppTheme.Text.ListItem" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.Text.ListItem.Small" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.Text.Caption" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textSizeTiny</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.BottomNavigation" parent="BaseTheme.BottomNavigation" />

</resources>
